<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#80000000"
    android:orientation="vertical"
    android:padding="3dp"
    android:id="@+id/rlvMain">

    <ImageView
        android:id="@+id/imgNotifyThumb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_item_thumb"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_song_thumb" />

    <RelativeLayout
        android:id="@+id/rlvNotifyBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgNotifyThumb"
        android:background="@android:color/transparent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:text="Không thể tin nổi"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSongArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSongTitle"
            android:lines="1"
            android:text="Nguyễn Tử Quảng"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#80ffffff" />

        <ImageView
            android:id="@+id/imgSkipPrev"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_skip_previous_white_48dp" />

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imgSkipPrev"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_play_arrow_white_48dp" />

        <ImageView
            android:id="@+id/imgSkipNext"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:layout_toRightOf="@+id/imgPlay"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_skip_next_white_48dp" />

        <ImageView
            android:id="@+id/imgShuffle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgSkipNext"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_shuffle_white_48dp" />

        <ImageView
            android:id="@+id/imgRepeat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgShuffle"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_repeat_white_48dp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/viewLine"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgRepeat"
            android:background="@drawable/bg_more_action"
            android:src="@drawable/ic_clear_white_48dp" />

    </RelativeLayout>

</RelativeLayout>